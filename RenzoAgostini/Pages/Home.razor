@page "/"
@using RenzoAgostini.Components

<PageTitle>Galleria Renzo Agostini</PageTitle>

<h2 class="sr-only">Quadri</h2>

@if (paintings == null)
{
    <div class="text-center">
        <p>Caricamento...</p>
    </div>
}
else if (!paintings.Any())
{
    <div class="text-center">
        <p>Nessun quadro disponibile al momento.</p>
    </div>
}
else
{
    <div class="grid">
        @foreach (var p in paintings)
        {
            <PaintingCard Title="@p.Title"
                          Description="@p.Description"
                          Year="@p.Year"
                          Medium="@p.Medium"
                          Price="@p.Price"
                          IsForSale="@p.IsForSale"
                          ImageUrls="@p.ImageUrls" />
        }
    </div>
}