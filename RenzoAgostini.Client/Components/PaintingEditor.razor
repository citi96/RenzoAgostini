@using Microsoft.AspNetCore.Components.Forms
@using RenzoAgostini.Shared.DTOs

<div class="editor-overlay" @onclick="OnCancel">
    <div class="editor-modal" @onclick:stopPropagation="true">
        <!-- Header -->
        <div class="editor-header">
            <h2 class="editor-title">@(IsEditing ? "Modifica Quadro" : "Nuovo Quadro")</h2>
            <button class="editor-close" @onclick="OnCancel" type="button">✕</button>
        </div>

        <!-- Body -->
        <div class="editor-body">
            <EditForm Model="form" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <!-- Basic Info Grid -->
                <div class="editor-form-grid">
                    <div class="editor-form-group">
                        <label class="editor-label required">Titolo</label>
                        <InputText @bind-Value="form.Title"
                                   class="editor-input"
                                   placeholder="Inserisci il titolo del quadro" />
                        <ValidationMessage For="() => form.Title" class="editor-validation" />
                    </div>

                    <div class="editor-form-group">
                        <label class="editor-label required">Slug</label>
                        <InputText @bind-Value="form.Slug"
                                   class="editor-input"
                                   placeholder="titolo-del-quadro" />
                        <ValidationMessage For="() => form.Slug" class="editor-validation" />
                    </div>

                    <div class="editor-form-group full-width">
                        <label class="editor-label">Descrizione</label>
                        <InputTextArea @bind-Value="form.Description"
                                       class="editor-textarea"
                                       rows="3"
                                       placeholder="Descrivi il quadro, il soggetto, lo stile..." />
                    </div>

                    <div class="editor-form-group">
                        <label class="editor-label">Anno</label>
                        <InputNumber @bind-Value="form.Year"
                                     class="editor-input"
                                     placeholder="2024" />
                    </div>

                    <div class="editor-form-group">
                        <label class="editor-label">Tecnica</label>
                        <InputText @bind-Value="form.Medium"
                                   class="editor-input"
                                   placeholder="Olio su tela, Acrilico su cartone..." />
                    </div>

                    <div class="editor-form-group">
                        <label class="editor-label">Dimensioni</label>
                        <InputText @bind-Value="form.Dimensions"
                                   class="editor-input"
                                   placeholder="50x70 cm" />
                    </div>

                    <div class="editor-form-group">
                        <label class="editor-label">Prezzo (€)</label>
                        <InputNumber @bind-Value="form.Price"
                                     class="editor-input"
                                     step="0.01"
                                     placeholder="0.00" />
                    </div>

                    <div class="editor-form-group checkbox-group">
                        <InputCheckbox @bind-Value="form.IsForSale" class="editor-checkbox" />
                        <label class="editor-label">Disponibile per la vendita</label>
                    </div>
                </div>

                <!-- Images Section -->
                <div class="editor-images-section">
                    <h3 class="editor-images-title">Immagini del Quadro</h3>

                    <!-- File Upload -->
                    <div class="editor-file-upload">
                        <InputFile OnChange="HandleFileSelection"
                                   multiple
                                   accept="image/*"
                                   class="editor-file-input" />
                        <label class="editor-file-label">
                            <div class="editor-file-icon">📁</div>
                            <div class="editor-file-text">
                                Clicca per selezionare immagini
                            </div>
                            <div class="editor-file-hint">
                                @if (!IsEditing)
                                {
                                    <span>Almeno un'immagine è obbligatoria</span>
                                }
                                else
                                {
                                    <span>Aggiungi nuove immagini (opzionale)</span>
                                }
                            </div>
                        </label>
                    </div>

                    <!-- Images Preview -->
                    @if (form.Images.Any())
                    {
                        <div class="editor-images-grid">
                            @for (int i = 0; i < form.Images.Count; i++)
                            {
                                var index = i;
                                var image = form.Images[i];
                                <div class="editor-image-item @(image.IsPrimary ? "primary" : "")">
                                    @if (image.IsPrimary)
                                    {
                                        <div class="editor-primary-badge">⭐ Principale</div>
                                    }
                                    <img src="@image.Url" alt="Anteprima" class="editor-image" />
                                    <div class="editor-image-overlay">
                                        @if (!image.IsPrimary)
                                        {
                                            <button type="button"
                                                    class="editor-image-btn primary"
                                                    @onclick="() => SetPrimary(index)">
                                                ⭐ Principale
                                            </button>
                                        }
                                        <button type="button"
                                                class="editor-image-btn danger"
                                                @onclick="() => RemoveImage(index)">
                                            🗑️
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- Footer -->
                <div class="editor-footer">
                    <button type="button" class="editor-btn-cancel" @onclick="OnCancel">
                        Annulla
                    </button>
                    <button type="submit"
                            class="editor-btn-save @(isSaving ? "editor-loading" : "")"
                            disabled="@(!CanSave || isSaving)">
                        @if (isSaving)
                        {
                            <span class="editor-spinner"></span>
                            <span>Salvataggio...</span>
                        }
                        else
                        {
                            <span>💾</span>
                            <span>@(IsEditing ? "Salva Modifiche" : "Crea Quadro")</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>