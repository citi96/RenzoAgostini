@page "/auth/callback"

<PageTitle>Autenticazione in corso...</PageTitle>

<div class="auth-callback-container">
    <div class="auth-callback-content">
        @if (isProcessing)
        {
            <div class="loading-section">
                <div class="spinner"></div>
                <h2>Accesso in corso...</h2>
                <p>Stiamo completando il processo di autenticazione.</p>
            </div>
        }
        else if (hasError)
        {
            <div class="error-section">
                <div class="error-icon">❌</div>
                <h2>Errore di Autenticazione</h2>
                <p>@errorMessage</p>
                <button class="btn primary" @onclick="ReturnHome">
                    Torna alla Home
                </button>
            </div>
        }
        else
        {
            <div class="success-section">
                <div class="success-icon">✅</div>
                <h2>Accesso completato!</h2>
                <p>Reindirizzamento in corso...</p>
            </div>
        }
    </div>
</div>