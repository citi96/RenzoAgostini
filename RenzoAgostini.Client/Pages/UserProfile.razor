@page "/profile"
@using Microsoft.AspNetCore.Authorization
@using RenzoAgostini.Client.Services.Interfaces
@using RenzoAgostini.Shared.DTOs
@using RenzoAgostini.Client.Services
@attribute [Authorize]

<div class="page-header">

    <h1 class="page-title">Il Mio Profilo</h1>
    <p class="page-subtitle">Gestisci le tue informazioni personali e la sicurezza del tuo account.</p>
</div>

<div class="container-narrow">
    <div class="card p-8">
        @if (isLoading)
        {
            <div class="loading">
                <div class="loading-spinner"></div>
                <p class="loading-text">Caricamento profilo...</p>
            </div>
        }
        else if (profile == null)
        {
            <div class="alert alert-danger">Impossibile caricare il profilo.</div>
        }
        else
        {
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger mb-4">@errorMessage</div>
            }
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success mb-4">@successMessage</div>
            }

            <EditForm Model="@profile" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                
                <div class="grid grid-2 gap-4 mb-4">
                    <div class="form-group">
                        <label class="form-label">Nome</label>
                        <InputText @bind-Value="profile.Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Cognome</label>
                        <InputText @bind-Value="profile.Surname" class="form-control" />
                    </div>
                </div>

                <div class="form-group mb-6">
                    <label class="form-label">Email (Non modificabile)</label>
                    <InputText @bind-Value="profile.Email" class="form-control" disabled />
                </div>

                <hr class="my-6 border-neutral-200" />
                <h3 class="text-lg font-semibold mb-4">Sicurezza</h3>

                <div class="form-group mb-4">
                    <label class="form-label">Nuova Password (lascia vuoto per non cambiare)</label>
                    <InputText @bind-Value="profile.NewPassword" type="password" class="form-control" />
                    <ValidationMessage For="@(() => profile.NewPassword)" />
                </div>

                <div class="form-group mb-6">
                    <label class="form-label">Conferma Nuova Password</label>
                    <InputText @bind-Value="profile.ConfirmNewPassword" type="password" class="form-control" />
                    <ValidationMessage For="@(() => profile.ConfirmNewPassword)" />
                </div>

                <div class="bg-neutral-50 p-4 rounded-lg mb-6 border border-neutral-200">
                    <div class="form-group">
                        <label class="form-label font-bold text-neutral-800">Password Attuale (Richiesta per salvare)</label>
                        <InputText @bind-Value="profile.CurrentPassword" type="password" class="form-control" />
                        <ValidationMessage For="@(() => profile.CurrentPassword)" />
                        <small class="text-neutral-500">Per la tua sicurezza, inserisci la password attuale per confermare le modifiche.</small>
                    </div>
                </div>

                 <div class="flex justify-between items-center gap-3">
                    <button type="button" class="btn btn-danger-outline" @onclick="DeleteAccount">
                        ⚠️ Elimina Account
                    </button>
                    
                    <div class="flex gap-3">
                        <button type="button" class="btn btn-outline" @onclick="@(() => Navigation.NavigateTo("/"))">Annulla</button>
                        <button type="submit" class="btn btn-primary">Salva Modifiche</button>
                    </div>
                </div>
            </EditForm>
        }
    </div>
</div>


