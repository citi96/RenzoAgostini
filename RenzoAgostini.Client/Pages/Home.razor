@page "/"

<PageTitle>Galleria Renzo Agostini - Arte Contemporanea</PageTitle>

<section class="gallery-page" id="gallery">
    <div class="gallery-header">
        <h1 class="gallery-title">Galleria d'Arte</h1>
        <p class="gallery-subtitle">
            Una selezione delle opere originali di Renzo Agostini, ordinate per anno di creazione.
        </p>
    </div>

    @if (IsLoading)
    {
        <div class="gallery-loading">
            <div class="gallery-loading-spinner"></div>
            <p>Caricamento opere...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="gallery-error">
            <div class="gallery-error-icon"><Icon Name="error" /></div>
            <h2>Impossibile mostrare la galleria</h2>
            <p>@ErrorMessage</p>
            <button class="btn btn-primary" @onclick="ReloadPaintings">Riprova</button>
        </div>
    }
    else if (Paintings?.Any() == true)
    {
        <div class="gallery-grid" style="@GalleryGridStyle">
            @foreach (var painting in Paintings)
            {
                <PaintingCard class="gallery-item"
                              Title="@painting.Title"
                              Description="@painting.Description"
                              Year="@painting.Year"
                              Medium="@painting.Medium"
                              Price="@painting.Price"
                              IsForSale="@painting.IsForSale"
                              ImageUrls="@painting.ImageUrls"
                              PaintingDto="painting"
                              IsLoading="false" />
            }
        </div>
    }
    else
    {
        <div class="gallery-empty">
            <div class="gallery-empty-icon"><Icon Name="empty" /></div>
            <h2>Nessuna opera disponibile</h2>
            <p>La galleria verr√† aggiornata appena nuove opere saranno disponibili.</p>
            <button class="btn btn-secondary" @onclick="ReloadPaintings">Aggiorna</button>
        </div>
    }
</section>
