@page "/admin/users"
@using RenzoAgostini.Client.Services
@using RenzoAgostini.Shared.Constants
@using RenzoAgostini.Shared.DTOs
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = RoleNames.Admin)]
@inject IAuthService AuthService

<PageTitle>User Management Â· Renzo Agostini</PageTitle>

<h1>User Management</h1>

@if (users == null)
{
    <p>Loading users...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Name</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Name @user.Surname</td>
                    <td>@(string.Join(", ", user.Roles))</td>
                    <td>
                        @if (user.UserName == "fchiti071@gmail.com")
                        {
                            <span class="badge bg-secondary">Super Admin</span>
                        }
                        else if (user.Roles.Any(role => string.Equals(role, RoleNames.Admin,
                        StringComparison.OrdinalIgnoreCase)))
                        {
                            <button class="btn btn-warning btn-sm" @onclick='@(() => SetRole(user.UserName, RoleNames.Viewer))'>Make
                                Viewer</button>
                        }
                        else
                        {
                            <button class="btn btn-success btn-sm"
                            @onclick='@(() => SetRole(user.UserName, RoleNames.Admin))'>MakeAdmin</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (users.Count == 0)
    {
        <div class="alert alert-info mt-3">
            Nessun utente trovato. Se sei sicuro che ci siano utenti, potrebbe esserci un errore di caricamento.
        </div>
    }
}

